# Homebrew
tap "homebrew/bundle"

# Productivity
cask "arc"                  # Chromium based browser
cask "firefox"               # Web browser
cask "raycast"              # Control your tools with a few keystrokes

mas "Slack", id: 803453959  # Team communication and collaboration software

# Entertainment
cask "spotify"  # Music streaming service

# Developer tools
brew "curl"                             # Get a file from an HTTP, HTTPS or FTP server
brew "fzf"                              # Command-line fuzzy finder written in Go
brew "gh"                               # GitHub command-line tool
brew "jesseduffield/lazygit/lazygit"    # Simple terminal UI for git commands
brew "mas"                              # Mac App Store command-line interface
brew "n"                                # Node.js version manager
brew "pnpm"                             # Fast, disk space efficient package manager
brew "rbenv"                            # Ruby version manager
brew "stow"                             # Organize software neatly under a single directory tree (e.g. /usr/local)
brew "tree"                             # Display directories as trees (with optional color/HTML output)
brew "vercel-cli"                       # Command-line interface for Vercel
brew 'watchman'                         # File watching service

cask "kitty"                # GPU-based terminal emulator
cask "postman"              # Collaboration platform for API development
cask "visual-studio-code"   # Open-source code editor

mas "Xcode", id: 497799835  # Developer tools
